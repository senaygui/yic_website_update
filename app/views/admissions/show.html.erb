  <main id="main">
  	<section class="breadcrumbs">
  		<div class="container">

  			<ol>
  				<li><a href="/">Home</a></li>
  				<li><%= link_to @admission.admission_name, admission_path(@admission)%></li>

  			</ol>
  			<h2>Regular Masters</h2>

  		</div>
  	</section>
  	<section id="departments" class="departments">
  		<div class="container">

  			<div class="section-title">
  				<h2>Our <%= @admission.admission_name%> Program</h2>
  				<p>Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. Sit sint consectetur velit.</p>
  			</div>

  			<div class="row">
  				<div class="col-lg-3">
  					<ul class="nav nav-tabs flex-column">
  						<li class="nav-item">
  							<a class="nav-link active show" data-toggle="tab" href="#tab-12">How to Apply</a>
  						</li>
  						<li class="nav-item">
  							<a class="nav-link" data-toggle="tab" href="#tab-22">Required Documents</a>
  						</li>
  						<li class="nav-item">
  							<a class="nav-link" data-toggle="tab" href="#tab-32">Payment Process</a>
  						</li>
  						<li class="nav-item">
  							<a class="nav-link" data-toggle="tab" href="#tab-42">Useful Informations</a>
